{
  "name": "temporal-orchestration-spike",
  "version": "0.0.0",
  "author": "Pascal Laenen <pascal@laenen.com",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "domains/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "clean": "npm run clean:turbo",
    "clean:turbo": "turbo run clean && rm -rf node_modules",
    "temporalite": "temporalite start --namespace default --filename ./temporal.local.db"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "concurrently": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "turbo": "latest",
    "typescript-parser": "^2.6.1"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "dependsOn": [
          "^build"
        ],
        "cache": false
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "coverage/**"
        ]
      },
      "clean": {
        "outputs": []
      }
    },
    "lint-staged": {
      "apps/**/*.{js,ts,jsx,tsx}": [
        "eslint --fix"
      ],
      "packages/ui/**/*.{js,ts,jsx,tsx}": [
        "eslint --fix"
      ],
      "*.json": [
        "prettier --write"
      ]
    }
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 6.0.0"
  }
}
