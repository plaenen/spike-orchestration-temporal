{
  "name": "temporal-orchestration-spike",
  "author": "Pascal Laenen <pascal@laenen.com",
  "license": "MIT",
  "files": [],
  "private": true,
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git"
  },
  "scripts": {
    "bootstrap": "npm install lerna && lerna bootstrap && npm install",
    "reset": "npm run cleanup && rimraf -rf node_modules && npm run bootstrap",
    "test": "lerna run test --stream",
    "test.coverage": "lerna run test.coverage --stream",
    "test.global": "npm run cleanup && npm run build && jest --coverage",
    "build": "lerna run build",
    "build:watch": "lerna run compile:watch --stream --no-sort",
    "cleanup": "lerna run cleanup --stream --parallel",
    "lint": "eslint packages/*/src --ext .ts --no-error-on-unmatched-pattern && prettier --end-of-line auto --check .",
    "lint.fix": "eslint packages/*/src --ext .ts --no-error-on-unmatched-pattern && prettier --end-of-line auto --fix .",
    "commitlint": "commitlint --from origin/main",
    "format": "prettier --write .",
    "temporalite": "temporalite start -f .temp/temporal/db/default.db --namespace default"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@tsconfig/node14": "^1.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.4.5",
    "jest-runner-eslint": "^1.0.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tail": "^2.2.4",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 6.0.0"
  },
  "dependencies": {
    "temporalio": "^0.17.2"
  }
}
